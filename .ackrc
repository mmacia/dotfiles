# only search with case sensitivity if there is mixed case
--smart-case
--nofollow

# ignore dirs
--ignore-dir=log
--ignore-dir=logs/
--ignore-dir=cache/
--ignore-dir=__pycache__
--ignore-dir=node_modules/
--ignore-dir=tmp/
--ignore-dir=env/
--ignore-dir=.coverage/
--ignore-dir=cov_html/
--ignore-dir=htmlcov/

# ignore files
--ignore-file=is:tags
--ignore-file=ext:log
