#!/bin/bash

# install vim and C++ LSP server
sudo apt install -y \
    aspell \
    aspell-en \
    aspell-es \
    vim-nox \
    exuberant-ctags \
    clangd-12 \
    clang-format \
    python3 \
    python3-pip

# install python deps
pip install --upgrade \
    python-lsp-server \
    jedi \
    flake8 \
    rope \
    mccabe \
    pycodestyle \
    pydocstyle \
    autopep8 \
    pyls-mypy \
    pyls-isort \
    python-lsp-black \
    python-language-server[all] \
    pylint \
    pylint_django \
    pynvim

if command -v vim >/dev/null 2>&1; then
    echo "Bootstraping Vim"
    vim -es '+PlugUpdate' '+PlugClean' '+qal' || true
    mkdir -p ~/.vim/undodir
fi
